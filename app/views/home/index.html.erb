<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.title %></td>
      <td><%= question.user_id %></td>
      <td><%= link_to 'Show', question %></td>
      <td><%= link_to 'Answers', question_answers_path(question.id) %></td>
      <td><%= question.topic.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>