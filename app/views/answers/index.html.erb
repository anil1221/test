<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.content %></td>
        <td><%= link_to 'Show', question_answer_path(params[:question_id], answer.id) %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(params[:question_id], answer.id) %></td>
<!--        <td><%#= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

